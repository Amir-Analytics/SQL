CREATE TABLE Master_Team_Stats
(
 Team_ID    int NOT NULL,
 Team_name  varchar(30) NOT NULL,
 h_a        varchar(5) NOT NULL,
 xG           decimal(6,4) NOT NULL,
 xGA          decimal(6,4) NOT NULL,
 xG           decimal(6,4) NOT NULL,
 npxG         decimal(6,4) NOT NULL,
 deep         int NOT NULL,
 deep_allowed int NOT NULL,
 missed       int NOT NULL,
 xPts         decimal(6,4) NOT NULL,
 result       varchar(5) NOT NULL,
 date         timestamp NOT NULL,
 wins         int NOT NULL,
 draws        int NOT NULL,
 loses        int NOT NULL,
 scored       int NOT NULL,
 pts          int NOT NULL,
 npxGD        decimal(6,4) NOT NULL,
 a            varchar(5) NOT NULL,
 h            varchar(5) NOT NULL,
 CONSTRAINT PK_1 PRIMARY KEY ( Team_ID )
);
